<h1>Bookings#index</h1>
<p>Find me in app/views/bookings/index.html.erb</p>

<h1>Calendar</h1>

<h3><%= link_to "make an appointment", new_booking_path %></h3>

<%= week_calendar do |date| %>
    <%= date %>
    <% @bookings.each do | booking | %>
        <% if date.strftime("%Y-%m-%d") == booking.start_time.strftime("%Y-%m-%d") %>
            <div>
                <%= booking.start_time.strftime("%H:%M") %>
                <% if booking.user == current_user || current_user_is_admin? %><br>
                    <%= booking.name %><br>
                    <%= booking.service %><br>
                <% end %>
            </div>
        <% end %>
    <% end %>
<% end %>